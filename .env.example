# NBA Vault Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_PATH=nba.sqlite
DUCKDB_PATH=nba.duckdb
DB_PARALLEL_WAL=1

# API Rate Limiting
NBA_API_RATE_LIMIT=8  # requests per minute
NBA_API_RETRY_ATTEMPTS=5
NBA_API_RETRY_DELAY=30  # initial delay in seconds

# Cache Configuration
CACHE_DIR=cache
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console
LOG_DIR=logs

# Ingestion Configuration
BACKFILL_WORKERS=1  # number of parallel workers for full backfill
BACKFILL_START_SEASON=1946
BACKFILL_END_SEASON=2024

# Scheduling
ENABLE_SCHEDULER=false
SCHEDULE_INTERVAL=daily  # daily, hourly, etc.
SCHEDULE_TIME=02:00  # HH:MM format

# DuckDB Configuration
DUCKDB_MEMORY_LIMIT=4GB
DUCKDB_THREADS=4
